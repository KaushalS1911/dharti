<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>File Upload</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
<div class="container">
    <div class="mt-5">
        <div class="d-flex justify-content-between align-items-center mt-5 mb-3">
            <h4 class="mb-3">Upload sarin price list file</h4>
            <button class="btn btn-success" id="downloadButton">Download</button>
        </div>
        <form id="uploadFormPrice" enctype="multipart/form-data" action="http://localhost:9000/sarin" method="post">
            <div class="mb-3">
                <input class="form-control" type="file" id="info-file-price" name="info-file">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="d-flex justify-content-between align-items-center mt-5 mb-3">
        <h4>Upload D-N file</h4>
<!--        <button class="btn btn-success" id="downloadButton">Download</button>-->
    </div>
    <form id="uploadFormDiagram" enctype="multipart/form-data" action="http://localhost:9000/dn" method="post">
        <div class="mb-3">
            <input class="form-control" type="file" id="info-file-diagram" name="info-file">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>


</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-kQ5qXG4a4YIh6+ZEXvVdFJRTMF9WUVT4T7A2YgRQ3vD3o6v1ykSRmS9N9S6YYJTB"
        crossorigin="anonymous"></script>
<script>
    document.getElementById('downloadButton').addEventListener('click', function () {
        fetch('http://localhost:9000/download')
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.blob();
            })
            .then(blob => {
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.style.display = 'none';
                a.href = url;
                a.download = 'downloaded_file';
                document.body.appendChild(a);
                a.click();
                window.URL.revokeObjectURL(url);
            })
            .catch(error => {
                console.error('There was a problem with the fetch operation:', error);
            });
    });

    function handleFormSubmit(formId,input) {
        const form = document.getElementById(formId);
        form.addEventListener('submit', function(event) {
            event.preventDefault();
            const formData = new FormData(form);
            fetch(form.action, {
                method: 'POST',
                body: formData
            })
                .then(response => {
                    if (response.ok) {
                        alert('File uploaded successfully!');
                        document.getElementById(input).value = ""
                    } else {
                        alert('There was a problem with the upload.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while uploading the file.');
                });
        });
    }

    handleFormSubmit('uploadFormDiagram','info-file-diagram');
    handleFormSubmit('uploadFormPrice','info-file-price');
</script>
</body>
</html>
